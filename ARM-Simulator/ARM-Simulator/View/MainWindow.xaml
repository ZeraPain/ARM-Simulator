<ribbon:RibbonWindow x:Class="ARM_Simulator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        Title="ARM Simulator" Height="600" Width="800">

    <DockPanel LastChildFill="True">
        <ribbon:Ribbon DockPanel.Dock="Top" Height="105">

            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu SmallImageSource="/Resources/Images/ApplicationMenu.png">
                    <RibbonApplicationMenuItem Header="Open File" />
                    <RibbonApplicationMenuItem Header="Save File" />
                    <RibbonApplicationMenuItem Header="Compile" />
                    <RibbonApplicationMenuItem Header="Exit" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Main" Margin="0,0,0,8">

                <RibbonGroup>
                    <RibbonButton Label="Run" LargeImageSource="/Resources/Images/go-button1.png" Click="BtnRun_Click" />
                    <RibbonButton Label="Tick" LargeImageSource="/Resources/Images/go-button1.png" Click="BtnStep_Click" />
                </RibbonGroup>
            </RibbonTab>
        </ribbon:Ribbon>

        <StackPanel>
            
            <Grid Width="Auto">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="350" />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="650" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>

                <RichTextBox AcceptsReturn="True" x:Name="TxtEditor" Height="Auto" Width="Auto" Margin="0,0,0,0" Grid.Column="0" Grid.Row="0" />

                <ListView Grid.Row="0" Grid.Column="1" x:Name="ListView" Height="Auto" Width="Auto">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Height" Value="19"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Register" Width="60" DisplayMemberBinding="{Binding Key}"/>
                            <GridViewColumn Header="Value" Width="80" DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                
            </Grid>
            
        </StackPanel>
    </DockPanel>
</ribbon:RibbonWindow>
