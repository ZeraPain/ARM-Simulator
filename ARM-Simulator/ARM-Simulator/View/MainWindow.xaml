<RibbonWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:ARM_Simulator.View"
        mc:Ignorable="d"
        x:Class="ARM_Simulator.View.MainWindow"
        Title="ARM Simulator" Height="600" Width="800" d:DataContext="{d:DesignInstance view:MainWindow}">

    <DockPanel LastChildFill="True">
        <Ribbon DockPanel.Dock="Top" Height="105">

            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu SmallImageSource="/Resources/Images/ApplicationMenu.png">
                    <RibbonApplicationMenuItem Header="New File" Click="BtnNewFile_Click" />
                    <RibbonApplicationMenuItem Header="Open File" Click="BtnLoadFile_Click" />
                    <RibbonApplicationMenuItem Header="Save File" Click="BtnSaveFile_Click" />
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Main" Margin="0,0,0,8">
                <RibbonGroup>
                    <RibbonButton Label="Run" LargeImageSource="/Resources/Images/run.png" Click="BtnRun_Click" />
                    <RibbonButton Label="Stop" LargeImageSource="/Resources/Images/stop.png" Click="BtnStop_Click" />
                    <RibbonButton Label="Tick" LargeImageSource="/Resources/Images/tick.png" Click="BtnStep_Click" />
                    <RibbonButton Label="Continue" LargeImageSource="/Resources/Images/continue.png" Click="BtnContinue_Click" />
                    <RibbonButton Label="Pause" LargeImageSource="/Resources/Images/pause.png" Click="BtnPause_Click" />
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab x:Name="OptionsTab" Header="Options" VerticalAlignment="Top" Margin="0,0,0,8">
                <RibbonGroup x:Name="OptionGroupPipelining">
                    <TextBlock x:Name="TextBlockLabel" Text="Pipelinig View"  FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <StackPanel Orientation="Horizontal">
                    <RibbonCheckBox x:Name="CheckBoxFetch" Label="Fetch"  Background="LawnGreen" Margin="0,-2,0,0"  VerticalAlignment="Center" Checked="CheckBoxFetch_OnChecked"/>
                    <RibbonCheckBox x:Name="CheckBoxDecode" Label="Decode"  Background="Yellow" Margin="0,-2,0,0" VerticalAlignment="Center" Checked="CheckBoxDecode_OnChecked"/>
                  <RibbonCheckBox x:Name="CheckBoxExcecute" Label="Excecute"  Background="OrangeRed" Margin="0,-2,0,0" VerticalAlignment="Center" Checked="CheckBoxExcecute_OnChecked"/>
               </StackPanel>  
                </RibbonGroup>
                <Separator></Separator>
                <RibbonGroup x:Name="OptionGroupBreakpoints" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="TextBlockBreakpoints" Text="Breakpoints" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <StackPanel Orientation="Horizontal">
                    <RibbonButton x:Name="CheckBoxShowBreakpoints" Label="Show All" Margin="1,2,1,2" Background="LightGray" Click="CheckBoxShowBreakpoints_OnClick"/>
                    <RibbonButton x:Name="CheckBoxRemoveBreakpoints" Label="Remove All" Margin="1,2,1,2" Background="LightGray" Click="CheckBoxRemoveBreakpoints_OnClick"/>
                  </StackPanel>   
                    </RibbonGroup>
               <Separator></Separator>
            </RibbonTab>
        </Ribbon>

        <StackPanel>
            <!-- This is only visible while editing a file -->
            <Grid x:Name="EditMode" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="350" />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>

                <RichTextBox AcceptsReturn="True" x:Name="RichTextBoxEditor" Grid.Row="0" AcceptsTab="True" KeyDown="TxtEditor_OnKeyDown">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>
                <RichTextBox x:Name="RichTextBoxLog" Grid.Row="1" IsEnabled="False">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </RichTextBox.Resources>
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="+++ Output Window +++"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>

            <!-- This is only visible while debugging a file -->
            <Grid x:Name="DebugMode" Visibility="Collapsed">

                <Grid.RowDefinitions>
                    <RowDefinition Height="320" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="150" />
                </Grid.ColumnDefinitions>

                <!-- Code section -->
                <ListView Grid.Row="0" Grid.Column="0" x:Name="ListViewCode" MouseDoubleClick="ListView_MouseDoubleClick" ItemsSource="{Binding CoreVm.CommandList}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="{Binding Converter={StaticResource ColorConverter}}" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="BP" Width="20" DisplayMemberBinding="{Binding Converter={StaticResource BreakpointConverter}}"/>
                            <GridViewColumn Header="Label" Width="50" DisplayMemberBinding="{Binding Label}"/>
                            <GridViewColumn Header="Code" Width="Auto" DisplayMemberBinding="{Binding Commandline}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Register view -->
                <ListView Grid.Row="0" Grid.Column="1" x:Name="ListViewRegister" ItemsSource="{Binding ArmSimulator.ArmCore.Registers}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Height" Value="17"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Register" Width="60" DisplayMemberBinding="{Binding Key}"/>
                            <GridViewColumn Header="Value" Width="80" DisplayMemberBinding="{Binding Value}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Memory view -->
                <ListView x:Name="ListViewMemory" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding MemoryVm.MemoryView}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Address" Width="70" DisplayMemberBinding="{Binding Key}" />
                            <GridViewColumn Header="Memory Data" Width="Auto" DisplayMemberBinding="{Binding Value}" />
                        </GridView>
                    </ListView.View>
                </ListView>

            </Grid>
            
        </StackPanel>
    </DockPanel>
</RibbonWindow>







