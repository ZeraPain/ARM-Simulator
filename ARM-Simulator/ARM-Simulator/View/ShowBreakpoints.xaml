<RibbonWindow x:Class="ARM_Simulator.View.ShowBreakpoints"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ARM_Simulator.ViewModel"
        mc:Ignorable="d"
        x:Name="BpWindow"
        Title="Show Breakpoints" Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        Closing="ShowBreakpoints_OnClosing">
    
    <RibbonWindow.DataContext>
        <viewModel:SimulatorViewModel/>
    </RibbonWindow.DataContext>
  

    <DockPanel LastChildFill="True">
        <ListView x:Name="ShowBp" >
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Height" Value="20" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Command" Width="auto" DisplayMemberBinding="{Binding Path=CoreVm.CommandList ,Converter={StaticResource BreakpointCommandConverter}, Mode=TwoWay}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</RibbonWindow>

