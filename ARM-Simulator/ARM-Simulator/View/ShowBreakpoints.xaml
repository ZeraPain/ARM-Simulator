<Window x:Class="ARM_Simulator.View.ShowBreakpoints"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ARM_Simulator.ViewModel"
        mc:Ignorable="d"
        x:Name="BpWindow"
        Title="Show Breakpoints" Width="150"
        SizeToContent="Height"
        Closing="ShowBreakpoints_OnClosing">

    <Window.DataContext>
        <viewModel:SimulatorViewModel/>
    </Window.DataContext>
  
    <DockPanel LastChildFill="True">

        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />

            </Grid.RowDefinitions>
            <ListView x:Name="ShowBp" ItemsSource="{Binding Path=CoreVm.BreakpointCommandList}">
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Height" Value="20" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Command" Width="auto" DisplayMemberBinding="{Binding  Commandline}"/>
                </GridView>
            </ListView.View>
        </ListView>
            
      </Grid>
    </DockPanel>
    
    
    
</Window>

